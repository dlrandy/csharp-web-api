{
  "Urls": "http://localhost:5000;https://localhost:5001",
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "MyBGList": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "Console": {
      //"LogLevel": {
      //  "MyBGList": "Warning"
      //},
      "FormatterOptions": {
        "TimestampFormat": "HH:mm:ss",
        "UseUtcTimestamp": true,
        "IncludeScopes": true
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "MyBGList": "Information"
      }
    },
    "Enrich": [
      "WithMachineName",
      "WithThreadId"
    ]
  },
  // TODO: move to secret.json
  "JWT": {
    "Issuer": "MyBGList",
    "Audience": "MyBGList",
    "SigningKey": "MyVeryOwnTestSigningKey123$"
  },
  "AllowedHosts": "*",
  "AllowedOrigins": "*",
  "UseDeveloperExceptionPage": false,
  "UseSwagger": false
}

